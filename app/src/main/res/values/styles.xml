<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.Atmos" parent="@android:style/Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarItemBackground">@drawable/selectable_background_atmos</item>
		<item name="android:popupMenuStyle">@style/PopupMenu.Atmos</item>
		<item name="android:dropDownListViewStyle">@style/DropDownListView.Atmos</item>
		<item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Atmos</item>
		<item name="android:actionDropDownStyle">@style/DropDownNav.Atmos</item>
		<item name="android:actionBarStyle">@style/ActionBar.Solid.Atmos</item>
		<item name="android:actionModeBackground">@drawable/cab_background_top_atmos</item>
		<item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_atmos</item>
		<item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Atmos</item>
		<item name="android:actionBarWidgetTheme">@style/Theme.Atmos.Widget</item>
	</style>

	<style name="ActionBar.Solid.Atmos" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/ab_solid_atmos</item>
		<item name="android:backgroundStacked">@drawable/ab_stacked_solid_atmos</item>
		<item name="android:backgroundSplit">@drawable/ab_bottom_solid_atmos</item>
		<item name="android:progressBarStyle">@style/ProgressBar.Atmos</item>
	</style>

	<style name="ActionBar.Transparent.Atmos" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@drawable/ab_transparent_atmos</item>
		<item name="android:progressBarStyle">@style/ProgressBar.Atmos</item>
	</style>

	<style name="PopupMenu.Atmos" parent="@android:style/Widget.Holo.ListPopupWindow">
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_atmos</item>
	</style>

	<style name="DropDownListView.Atmos" parent="@android:style/Widget.Holo.ListView.DropDown">
		<item name="android:listSelector">@drawable/selectable_background_atmos</item>
	</style>

	<style name="ActionBarTabStyle.Atmos" parent="@android:style/Widget.Holo.ActionBar.TabView">
		<item name="android:background">@drawable/tab_indicator_ab_atmos</item>
	</style>

	<style name="DropDownNav.Atmos" parent="@android:style/Widget.Holo.Spinner">
		<item name="android:background">@drawable/spinner_background_ab_atmos</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_atmos</item>
		<item name="android:dropDownSelector">@drawable/selectable_background_atmos</item>
	</style>

	<style name="ProgressBar.Atmos" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_atmos</item>
	</style>

	<style name="ActionButton.CloseMode.Atmos" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
		<item name="android:background">@drawable/btn_cab_done_atmos</item>
	</style>

	<style name="Theme.Atmos.Widget" parent="@android:style/Theme.Holo">
		<item name="android:popupMenuStyle">@style/PopupMenu.Atmos</item>
		<item name="android:dropDownListViewStyle">@style/DropDownListView.Atmos</item>
	</style>

</resources>